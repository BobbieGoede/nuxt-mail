{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"verbatimModuleSyntax": true,
		"types": [
			"./src/env.d.ts"
		],
		"paths": {
			"#app": [
				"./node_modules/nuxt/dist/app"
			],
			"#app/*": [
				"./node_modules/nuxt/dist/app/*"
			],
			"#components": [
				"./.nuxt/components"
			],
			"#imports": [
				"./.nuxt/imports.d.ts"
			],
			"#pages": [
				"./node_modules/nuxt/dist/pages/runtime/index.d.ts"
			],
			"#internal/__MODULE_NAME__/options.mjs": [
				"./src/options.d.ts"
			],
			"virtual:nuxt-mail-types": [
				"./src/types.ts"
			]
		}
	},
	"exclude": [
		"**/.nuxt/**",
		"**/*/dist/*",
		"docs/**",
		"playground/**",
		"specs/**.spec*",
		"specs/**.test*"
	]
}